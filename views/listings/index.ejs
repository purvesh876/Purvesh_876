<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
    text-decoration: none;
    color: inherit;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
    margin-left: 8rem;
    display: flex;
    align-items: center;
  }
</style>

<div id="filters">
  <a href="/listings?category=Adventure" class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Adventure</p>
  </a>
  <a href="/listings?category=Beach" class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Beach</p>
  </a>
  <a href="/listings?category=Luxury" class="filter">
    <div><i class="fa-regular fa-gem"></i></div>
    <p>Luxury</p>
  </a>
  <a href="/listings?category=Budget" class="filter">
    <div><i class="fa-solid fa-hand-holding-dollar"></i></div>
    <p>Budget</p>
  </a>
  <a href="/listings?category=Romantic" class="filter">
    <div><i class="fa-brands fa-gratipay"></i></div>
    <p>Romantic</p>
  </a>
  <a href="/listings?category=Mountain" class="filter">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountain</p>
  </a>
  <a href="/listings?category=Castle" class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castle</p>
  </a>
  <a href="/listings?category=Temple" class="filter">
    <div><i class="fa-solid fa-gopuram"></i></div>
    <p>Temple</p>
  </a>
  <a href="/listings?category=Forest" class="filter">
    <div><i class="fa-solid fa-tree"></i></div>
    <p>Forest</p>
  </a>
  <a href="/listings?category=City" class="filter">
    <div><i class="fa-solid fa-city"></i></div>
    <p>City</p>
  </a>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-3 mt-3">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
            <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<div id="chat-container">
  <div id="chat-box"></div>
  <input type="text" id="chat-input" placeholder="Ask about listings..." />
</div>


<script>
  const input = document.getElementById("chat-input");
  const box = document.getElementById("chat-box");

  input.addEventListener("keypress", async (e) => {
  if (e.key === "Enter" && input.value.trim() !== "") {
    const msg = input.value;
    box.innerHTML += `<div><strong>You:</strong> ${msg}</div>`;
    input.value = "";

    try {
      const res = await fetch("/chatbot", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({ message: msg })
      });
      const data = await res.json();

      if (data.reply.startsWith("Here are")) {
        
        box.innerHTML += `<div><strong>Bot:</strong><br>${data.reply}</div>`;
      } else {
        box.innerHTML += `<div><strong>Bot:</strong> ${data.reply}</div>`;
      }

      box.scrollTop = box.scrollHeight;
    } catch (err) {
      box.innerHTML += `<div><strong>Bot:</strong> Oops! Something went wrong.</div>`;
    }
  }
});

</script>


<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>

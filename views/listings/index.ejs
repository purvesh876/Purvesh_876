#chat-messages {
  height: 250px;
  overflow-y: auto;
  margin-bottom: 10px;
}

.chat-message {
  margin: 5px 0;
}

.user-message {
  text-align: right;
  color: #007bff;
}

.bot-message {
  text-align: left;
  color: #28a745;
}

/* Category Bar */
#filters {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.filter {
  text-align: center;
  margin: 0.5rem;
  padding: 0.6rem 1rem;
  border-radius: 20px;
  color: white;
  font-weight: bold;
  text-decoration: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.filter:hover {
  transform: translateY(-3px);
  box-shadow: 0px 4px 12px rgba(0,0,0,0.2);
}

.filter p {
  font-size: 0.8rem;
  margin: 5px 0 0 0;
}

.tax-info {
  display: none;
}

.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.5rem;
  padding: 1rem;
  margin-left: 1rem;
  display: flex;
  align-items: center;
  background: white;
}

/* Card Styles */
.listing-card {
  position: relative;
  overflow: hidden;
  border-radius: 16px;
  box-shadow: 0px 4px 20px rgba(0,0,0,0.15);
  transition: transform 0.3s ease;
  flex: 1 1 32%; /* Each item will take 32% of the container width on large screens */
  margin-bottom: 20px;
}

.listing-card:hover {
  transform: translateY(-5px);
}

.listing-image {
  width: 100%;
  height: 20rem;
  object-fit: cover;
  display: block;
}

.gradient-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60%;
  background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);
}

.listing-title {
  position: absolute;
  bottom: 10px;
  left: 15px;
  color: white;
  font-size: 1.2rem;
  font-weight: bold;
  z-index: 2;
}

.badge-price, .badge-category {
  position: absolute;
  padding: 6px 10px;
  font-size: 0.85rem;
  border-radius: 12px;
  font-weight: bold;
  z-index: 2;
}

.badge-category {
  top: 10px;
  left: 10px;
  background-color: rgba(255,255,255,0.9);
  color: #333;
}

.badge-price {
  bottom: 10px;
  right: 10px;
  background-color: #ff4b2b;
  color: white;
}

/* Responsive grid for cards */
@media (max-width: 576px) {
  .row {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }
  .listing-card {
    flex: 1 1 100%; /* Stacks all items vertically */
  }
  .listing-image {
    height: 15rem; /* Smaller height for mobile images */
  }
  .listing-card {
    margin-bottom: 15px;
  }
}

@media (min-width: 577px) and (max-width: 768px) {
  .row {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
  }
  .listing-card {
    flex: 1 1 48%; /* Two items per row */
  }
  .listing-image {
    height: 18rem; /* Adjust image size for tablets */
  }
}

@media (min-width: 769px) {
  .row {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }
  .listing-card {
    flex: 1 1 32%; /* Three items per row for desktop */
  }
  .listing-image {
    height: 20rem; /* Default image size for large screens */
  }
}



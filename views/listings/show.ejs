<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="container my-5">
  
  <!-- Title -->
  <div class="text-center mb-4">
    <h1 class="fw-bold text-gradient"><%= listing.title %></h1>
    <p class="text-muted">Hosted by <b><%= listing.owner.username %></b></p>
  </div>

  <!-- Image + Info -->
  <div class="row g-4">
    
    <!-- Carousel -->
    <div class="col-lg-6">
      <div id="listingCarousel" class="carousel slide shadow rounded-4 overflow-hidden" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% if (listing.image && listing.image.url) { %>
            <div class="carousel-item active">
              <img src="<%= listing.image.url %>" class="d-block w-100" alt="Listing Image">
            </div>
          <% } else { %>
            <div class="carousel-item active">
              <img src="https://via.placeholder.com/600x400?text=No+Image" class="d-block w-100" alt="No image">
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Info Card -->
    <div class="col-lg-6">
      <div class="p-4 rounded-4 shadow-lg h-100 bg-light">
        <p class="mb-3"><%= listing.description %></p>

        <!-- Price -->
        <div class="mb-3">
          <span class="fs-4 fw-bold badge rounded-pill bg-gradient text-white px-3 py-2">
            â‚¹<%= listing.price.toLocaleString("en-IN") %>
          </span>
        </div>

        <!-- Location & Category -->
        <div class="d-flex flex-wrap gap-2 mb-4">
          <span class="badge rounded-pill bg-primary">
            <i class="fa-solid fa-location-dot"></i> <%= listing.location %>
          </span>
          <span class="badge rounded-pill bg-success"><%= listing.country %></span>
          <% if (listing.category) { %>
            <% 
              let emoji = "";
              switch (listing.category) {
                case "Beach": emoji = "ðŸ–ï¸"; break;
                case "Mountain": emoji = "ðŸŒ„"; break;
                case "Forest": emoji = "ðŸŒ²"; break;
                case "Desert": emoji = "ðŸœï¸"; break;
                case "City": emoji = "ðŸ™ï¸"; break;
                case "Village": emoji = "ðŸŒ¾"; break;
                case "Snow": emoji = "â„ï¸"; break;
                default: emoji = "ðŸ“";
              }
            %>
            <span class="badge rounded-pill bg-info text-dark">
              <%= emoji %> <%= listing.category %>
            </span>
          <% } %>
        </div>

        <!-- Edit/Delete -->
        <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
          <div class="d-flex gap-2">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary btn-sm rounded-pill">
              <i class="fa-solid fa-pen"></i> Edit
            </a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
              <button class="btn btn-outline-danger btn-sm rounded-pill">
                <i class="fa-solid fa-trash"></i> Delete
              </button>
            </form>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Reviews -->
  <div class="mt-5">
    <hr>
    <% if (currUser) { %>
      <div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
        <h4 class="mb-3">Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
          <div class="mb-3">
            <label class="form-label">Rating</label>
            <fieldset class="starability-slot">
              <% for (let i = 1; i <= 5; i++) { %>
                <input type="radio" id="rate-<%= i %>" name="review[rating]" value="<%= i %>">
                <label for="rate-<%= i %>" title="<%= i %> star"><%= i %> star</label>
              <% } %>
            </fieldset>
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" class="form-control" rows="4" required></textarea>
            <div class="invalid-feedback">Please add a comment.</div>
          </div>
          <button class="btn btn-gradient rounded-pill">Submit</button>
        </form>
      </div>
    <% } %>

    <% if (listing.reviews.length > 0) { %>
      <h5 class="mb-3">All Reviews</h5>
      <div class="row g-3">
        <% for (review of listing.reviews) { %>
          <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4">
              <div class="card-body">
                <h6 class="fw-bold"><%= review.author.username %></h6>
                <p class="starability-result" data-rating="<%= review.rating %>"></p>
                <p><%= review.comment %></p>
                <div class="text-end">
                  <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                    <button class="btn btn-sm btn-outline-danger rounded-pill">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

  <!-- Map -->
  <div class="mt-5">
    <h4 class="mb-3">Where you'll be</h4>
    <div id="map" class="rounded-4 shadow-sm" style="height: 300px;"></div>
  </div>
</div>

<script src="/js/map.js"></script>


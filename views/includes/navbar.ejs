<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
    transition: background-color 0.3s ease;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 0.8rem;
  }
</style>

<nav class="navbar navbar-expand-md bg-white shadow-sm border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center gap-2 fs-5 fw-bold text-danger" href="/listings">
      <i class="fa-regular fa-compass"></i>AirHub
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="d-flex align-items-center gap-3 ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control rounded-pill px-4 py-2 border-0 shadow-sm" type="search" placeholder="Search destinations" aria-label="Search" />
          <button class="btn btn-danger rounded-pill px-4 d-flex align-items-center gap-2" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>

        <div class="navbar-nav d-flex align-items-center gap-3">
          <a class="nav-link" href="/listings/new">
            <i class="fa-solid fa-house"></i> AirHub your home
          </a>

          <% if (!currUser) { %>
            <a class="nav-link" href="/signup">
              <i class="fa-solid fa-user-plus"></i> <b>Sign up</b>
            </a>
            <a class="nav-link" href="/login">
              <i class="fa-solid fa-right-to-bracket"></i> <b>Log in</b>
            </a>
          <% } %>

          <% if (currUser) { %>
            <a class="nav-link" href="/logout">
              <i class="fa-solid fa-right-from-bracket"></i> <b>Log out</b>
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>
